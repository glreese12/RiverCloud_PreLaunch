  <div id="topWrap" >
    <div class="container">
        <div class="col-lg-7 col-sm-7 columns">
          <div class="panel panel-default" id="border-radius-combo" style="margin-top:90px;">
            <h1 style="text-align:center;"><%= SITE_TITLE %></h1>
            <h4 class="subheader" style="text-align:center" ><%= raw SITE_BLURB %></h4>
            <h4 class="subheader" style="text-align:center" ><%= raw SITE_COMING %></h4>

            <p style="text-align:center;"><em>Sign up, stay informed:</em></p>

            <div class="row">
              <%= form_tag '/interested' do %>
                <div class="col-lg-6 col-sm-6 columns"><%= email_field_tag 'email', nil, placeholder: 'Email address' %></div>
            </div>    
            <div class="row"> 
            <center>   
                <div class="col-lg-9 col-sm-8 columns"><%= submit_tag 'Yes!', class: 'btn btn-primary', :style=>'width: 200px;' %></div>
                <%= hidden_field_tag :ref, "#{@ref}" %>
              <% end %>
            </center>  
            </div>

            <h6 class="subheader" style="text-align:center;">
              (Follow us on <a href="http://twitter.com/<%= TWITTER_NAME %>" target="_blank">Twitter</a>.)
            </h6>
          </div>
        </div>
    </div>
  </div>


<% unless alert.blank? %>
  <div class="row">
    <div class="col-lg-5 col-sm-12  large-centered">
      <div data-alert class="alert-box radius"><%= alert %></div>
    </div>
  </div>
<% end %>

